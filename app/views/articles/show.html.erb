<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<ul>
  <li><%= link_to 'Edit Article', edit_article_path(@article) %></li>
  <li>
    <%= button_to 'Delete Article', article_path(@article),
      method: :delete,
      data: { turbo_confirm: 'Are you sure you want to delete this article ?'
    } %>
  </li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>


<h2>Add a comment</h2>

<%= render 'comments/form' %>
